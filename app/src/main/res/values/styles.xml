<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 1) App theme based on MaterialComponents -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="materialCardViewStyle">@style/CardCorner</item>
        <!-- Customize your colors here -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Optional: status & nav bar tints -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- 2) Your CardCorner shape appearance overlay -->
    <style name="CardCorner" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
</resources>

